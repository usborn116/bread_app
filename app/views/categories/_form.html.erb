  <div>
    <%= form.label :current, style: "display: block" %>
    <%= form.text_field :current %>
  </div>

  <div>
    <%= form.label :budget_amt, style: "display: block" %>
    <%= form.text_field :budget_amt %>
  </div>

  <div>
    <%= form.label :user_id, style: "display: block" %>
    <%= form.text_field :user_id %>
  </div>

  <div>
    <%= form.label :account_id, style: "display: block" %>
    <%= form.text_field :account_id %>
  </div>

  <div>
    <%= form.submit %>
